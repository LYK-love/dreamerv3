    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Debug GridWorld",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dreamerv3/train.py",
            "args": "--logdir ./logdir/$(date \"+%Y%m%d-%H%M%S\") --configs custom debug --batch_size 16 --run.train_ratio 32",
            "console": "integratedTerminal"
        },
        {
            "name": "Run atari",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dreamerv3/train.py",
            "args": "--logdir ./logdir/$(date \"+%Y%m%d-%H%M%S\") --configs atari small --batch_size 16 --run.train_ratio 32",
            "console": "integratedTerminal"
        },
    ]
}